<Application
    x:Class="Kassa.Avalonia.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedThemeVariant="Default">
    <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

    <Application.Resources>

        <ResourceDictionary>

            <FontFamily x:Key="Montseratt">avares://Kassa.Avalonia/Assets/Fonts/Montseratt#Montserrat</FontFamily>
            <FontFamily x:Key="LucidaConsole">avares://Kassa.Avalonia/Assets/Fonts/LucidaConsole#lucidaconsole</FontFamily>

            <ResourceDictionary.MergedDictionaries>
                <MergeResourceInclude Source="/Themes/PornhubTheme.axaml" />
                <MergeResourceInclude Source="/Resources/Icons.axaml" />
                <MergeResourceInclude Source="/Resources/ControlTemplates.axaml" />

                <MergeResourceInclude Source="/Dialogs/BaseDialog.axaml" />
                <MergeResourceInclude Source="/Dialogs/ClosableDialog.axaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/Resources/Styles.axaml" />
    </Application.Styles>



</Application>