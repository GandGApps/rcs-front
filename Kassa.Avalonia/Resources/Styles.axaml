<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mx="using:Kassa.Avalonia.MarkupExtensions">
    <Design.PreviewWith>
        <StackPanel Margin="20" Spacing="10">
            <TextBlock Text="Default TextBlock" />
            <TextBox Text="Default TextBox" />
        </StackPanel>
    </Design.PreviewWith>

    <Style Selector="Border.adaptive">
        <Setter Property="Width" Value="{mx:AdaptiveSize 150}" />
        <Setter Property="Height" Value="{mx:AdaptiveSize 150}" />
    </Style>

    <Style Selector="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource Montseratt}" />
    </Style>

    <Style Selector="TextBox">
        <Setter Property="FontFamily" Value="{DynamicResource Montseratt}" />
        <Setter Property="Foreground" Value="{DynamicResource SecondaryForeground}" />
    </Style>

    <ControlTemplate x:Key="{x:Type Button}" TargetType="Button" />

</Styles>
