<UserControl
    x:Class="KassaLauncher.LaunchApp"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:suki="clr-namespace:SukiUI.Theme;assembly=SukiUI"
    xmlns:vm="using:KassaLauncher.Vms"
    d:DesignHeight="500"
    d:DesignWidth="800"
    x:DataType="vm:LaunchAppVm"
    mc:Ignorable="d">
    <Grid
        Width="450"
        HorizontalAlignment="Center"
        RowDefinitions="*, Auto, Auto, Auto">

        <Image
            Width="200"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Source="{SvgImage /Assets/Logo.svg}" />

        <Button
            Grid.Row="1"
            Margin="0,0,0,20"
            suki:ButtonExtensions.ShowProgress="{Binding LaunchAppCommand.IsExecuting^}"
            Command="{Binding LaunchAppCommand}"
            Content="Запустить" />

        <Button
            Grid.Row="2"
            Margin="0,0,0,20"
            Classes="Basic"
            Click="OpenSettings"
            Content="Настройки" />

        <Button
            Grid.Row="3"
            Margin="0,0,0,20"
            Classes="Basic"
            Command="{Binding RemoveCommand}">
            <TextBlock Foreground="Red" Text="Удалить" />
        </Button>

    </Grid>
</UserControl>
