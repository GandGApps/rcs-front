<UserControl
    x:Class="RcsInstaller.ProgressPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skc="clr-namespace:SukiUI.Controls;assembly=SukiUI"
    xmlns:sukiUi="clr-namespace:SukiUI;assembly=SukiUI"
    xmlns:vm="using:RcsInstaller.Vms"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:ProgressPageVm"
    mc:Ignorable="d">
    <Grid RowDefinitions="*, Auto">

        <skc:WaveProgress
            Width="200"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsTextVisible="True"
            Value="{Binding ProgressState.Value}" />

        <TextBlock Grid.Row="1" Text="{Binding ProgressState.State}" />

    </Grid>
</UserControl>
