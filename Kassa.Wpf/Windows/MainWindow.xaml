<rxui:ReactiveWindow
    x:Class="Kassa.Wpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Kassa.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rxui="http://reactiveui.net"
    xmlns:vm="clr-namespace:Kassa.RxUI;assembly=Kassa.RxUI"
    Title="MainWindow"
    d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
    d:DesignHeight="860"
    d:DesignWidth="1530"
    x:TypeArguments="vm:MainViewModel"
    Background="{StaticResource Theme}"
    ResizeMode="NoResize"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid>
        <Border
            x:Name="DialogOverlay"
            Grid.RowSpan="2"
            Panel.ZIndex="10"
            Background="{DynamicResource BlurColor}"
            Visibility="Collapsed">
            <rxui:RoutedViewHost x:Name="DialogHost" />
        </Border>


        <Grid x:Name="RootBody">

            <Grid.Effect>
                <BlurEffect x:Name="ContentBlur" Radius="0" />
            </Grid.Effect>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="70" />
            </Grid.RowDefinitions>

            <rxui:RoutedViewHost x:Name="RoutedViewHost" Grid.Row="0" />

            <Border
                Grid.Row="2"
                Padding="20,10"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="14,14,0,0">
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <ContentPresenter
                        x:Name="PageFooter"
                        Margin="0,0,35,0"
                        HorizontalAlignment="Right" />

                    <CheckBox
                        x:Name="IsMainPageCheckBox"
                        Grid.Column="1"
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Right"
                        ContentTemplate="{StaticResource MainMenuIcon}"
                        Style="{StaticResource BackToMain}" />


                </Grid>

            </Border>



        </Grid>
    </Grid>
</rxui:ReactiveWindow>
