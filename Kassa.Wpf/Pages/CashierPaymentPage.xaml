<rxui:ReactiveUserControl
    x:Class="Kassa.Wpf.Pages.CashierPaymentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:Kassa.Wpf.Behaviors"
    xmlns:controls="clr-namespace:Kassa.Wpf.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Kassa.Wpf.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mx="clr-namespace:Kassa.Wpf.MarkupExntesions"
    xmlns:pages="clr-namespace:Kassa.RxUI.Pages;assembly=Kassa.RxUI"
    xmlns:rxui="http://reactiveui.net"
    xmlns:wnd="clr-namespace:Kassa.Wpf"
    Padding="{mx:AdaptiveSize Thickness={StaticResource FooterSizeAsThickness}}"
    d:DataContext="{d:DesignInstance Type=pages:CashierPaymentPageVm}"
    d:DesignHeight="840"
    d:DesignWidth="1440"
    x:TypeArguments="pages:CashierPaymentPageVm"
    Background="{DynamicResource Theme}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Border
                Height="{Binding ActualHeight, ElementName=CashierTabPanel}"
                Margin="0,3,0,0"
                Padding="12"
                Background="{DynamicResource ShoppingListTopMenu}"
                ClipToBounds="True"
                CornerRadius="11"
                TextBlock.Foreground="White">
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="0.7*" />
                        <ColumnDefinition Width="0.6*" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <CheckBox
                        x:Name="MultiSelectCheckbox"
                        Margin="-12,-12,0,-12"
                        HorizontalAlignment="Left">
                        <CheckBox.Style>
                            <Style TargetType="CheckBox">
                                <Setter Property="Background" Value="{StaticResource ClickableBg}" />
                                <Setter Property="MinWidth" Value="0" />

                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="CheckBox">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="11,0,0,11">
                                                <Image
                                                    x:Name="CheckIcon"
                                                    Width="22"
                                                    Height="22"
                                                    Margin="12,0,12,0"
                                                    HorizontalAlignment="Left"
                                                    Source="{DynamicResource CheckListIcon}" />
                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource MultiSelectCheckBoxCheckedBackground}" />
                                                    <Setter TargetName="CheckIcon" Property="Source" Value="{StaticResource NegativeCheckListIcon}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>

                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </CheckBox.Style>

                    </CheckBox>


                    <TextBlock
                        Grid.Column="1"
                        Style="{StaticResource Header2}"
                        TextAlignment="Center">
                        <Run Text="03.02  21:14" />
                        <LineBreak />
                        <Run Text="Здесь" />
                    </TextBlock>

                    <TextBlock
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        LineHeight="10"
                        Style="{StaticResource Header2}"
                        TextAlignment="Center">
                        <Path
                            Width="13"
                            Height="17"
                            Data="{StaticResource DocsIcon}"
                            Fill="White" />
                        <Run Text="20" />
                    </TextBlock>

                    <TextBlock
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        Style="{StaticResource Header2}"
                        TextAlignment="Center">
                        <Path
                            Height="20"
                            Data="{StaticResource UserIcon}"
                            Fill="White" />
                        <Run Text="Григор" />
                    </TextBlock>

                </Grid>
            </Border>

            <ScrollViewer
                Grid.Row="1"
                Style="{StaticResource PrimaryScrollViewer}"
                VerticalScrollBarVisibility="Auto">

                <i:Interaction.Behaviors>
                    <behaviors:ScrollViewerFixingBehavior />
                </i:Interaction.Behaviors>

                <ItemsControl x:Name="ShoppingListItems" Margin="0,11,0,0" />
            </ScrollViewer>

            <Border
                Grid.Row="2"
                Padding="4"
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="11">
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <controls:ButtonWithCornerRaduis
                        x:Name="PricingDetailsButton"
                        Grid.RowSpan="2"
                        Padding="12"
                        HorizontalContentAlignment="Stretch"
                        Background="White"
                        CornerRadius="11">
                        <StackPanel>

                            <TextBlock
                                HorizontalAlignment="Center"
                                Foreground="{DynamicResource PricingDetailsButtonForeground}"
                                Style="{StaticResource Header2}"
                                Text="0,00%" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Style="{DynamicResource SmallTextBlock}"
                                Text="Скидка" />

                            <Border
                                Height="1"
                                Margin="0,4,0,6.4"
                                Background="{DynamicResource SubtotalSeparator}" />

                            <TextBlock
                                HorizontalAlignment="Center"
                                Foreground="{DynamicResource PricingDetailsButtonForeground}"
                                Style="{StaticResource Header2}"
                                Text="0,00%" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Style="{DynamicResource SmallTextBlock}"
                                Text="Надбавка" />

                        </StackPanel>
                    </controls:ButtonWithCornerRaduis>

                    <Border
                        x:Name="SubtotalBorder"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="7,0,0,0"
                        BorderBrush="White"
                        BorderThickness="1"
                        CornerRadius="27"
                        TextBlock.Foreground="White">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource ExtraLarge}"
                            TextAlignment="Center">
                            <Run
                                x:Name="SubtotalCost"
                                FontWeight="Bold"
                                Text="0,00 р" />
                            <LineBreak />
                            <Run FontSize="{mx:AdaptiveSize Size=11}" Text="Подытог" />
                        </TextBlock>
                    </Border>

                    <Border
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="{Binding ActualHeight, ElementName=SubtotalBorder, Mode=OneWay}"
                        Margin="7,4,0,0"
                        Background="{DynamicResource AccentBrush}"
                        BorderBrush="{DynamicResource AccentBrush}"
                        BorderThickness="1"
                        CornerRadius="27"
                        TextBlock.Foreground="White">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="{mx:AdaptiveSize Size=36}"
                            Style="{StaticResource ExtraLarge}"
                            TextAlignment="Center">
                            <Run
                                x:Name="TotalCost"
                                FontWeight="Bold"
                                Text="0,00 р" />
                        </TextBlock>
                    </Border>

                </Grid>
            </Border>

        </Grid>

    </Grid>
</rxui:ReactiveUserControl>
