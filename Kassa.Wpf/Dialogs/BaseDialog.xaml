                            </Grid>

                            -->

                        </Border>

                    </Grid>

                </Border>

            </Grid>
        </Border>

    </ControlTemplate>

    <Style
        x:Key="WidePrimaryDialogBaseStyle"
        BasedOn="{StaticResource WideDialogUserControl}"
        TargetType="UserControl">
        <Setter Property="Template" Value="{StaticResource WidePrimaryDialogBaseTemplate}" />
    </Style>

</ResourceDictionary>