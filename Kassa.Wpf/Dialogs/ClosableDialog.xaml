<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dialogs="clr-namespace:Kassa.Wpf.Dialogs">

    <ControlTemplate x:Key="ClosableDialogTemplate" TargetType="UserControl">
        <Grid
            Margin="76,0,0,76"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="76" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="76" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Button
                x:Name="CloseDialog"
                Grid.Column="1"
                Background="{StaticResource ClickableBg}"
                BorderThickness="0">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type ButtonBase}">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="true">
                            <ContentPresenter
                                x:Name="contentPresenter"
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Focusable="False"
                                RecognizesAccessKey="True"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Button.IsDefaulted" Value="true">
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <Path
                    Width="76"
                    Height="76"
                    Data="{StaticResource Close}"
                    Fill="White" />
            </Button>


            <ContentPresenter Grid.Row="1" />

        </Grid>
    </ControlTemplate>

    <CornerRadius x:Key="StartMenu">12,12,0,0</CornerRadius>
    <CornerRadius x:Key="EndMenu">0,0,12,12</CornerRadius>

    <Style x:Key="PrimaryMenu" TargetType="Border">
        <Setter Property="Width" Value="500" />
        <Setter Property="Background" Value="White" />
        <Setter Property="CornerRadius" Value="12" />
    </Style>

    <Style x:Key="HeaderMenu" TargetType="Border">
        <Setter Property="Background" Value="#E2EBF1" />
        <Setter Property="CornerRadius" Value="{DynamicResource StartMenu}" />
        <Setter Property="Padding" Value="20,24,20,13" />
    </Style>

    <Style x:Key="HeaderIcon" TargetType="Image">
        <Setter Property="Stretch" Value="Uniform" />
        <Setter Property="Margin" Value="10" />
    </Style>

    <Style x:Key="MenuButton" TargetType="Button">
        <Setter Property="Background" Value="White" />
        <Setter Property="Padding" Value="30" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="TextBlock.LineHeight" Value="33" />
    </Style>

    <Style x:Key="Separator" TargetType="Border">
        <Setter Property="Width" Value="430" />
        <Setter Property="Height" Value="1" />
        <Setter Property="Background" Value="#C5E3F8" />
    </Style>

    <Style
        x:Key="NotCenteredMenyButton"
        BasedOn="{StaticResource MenuButton}"
        TargetType="Button">
        <Setter Property="HorizontalContentAlignment" Value="Left" />
    </Style>

    <Style x:Key="DialogFooter" TargetType="Border">
        <Setter Property="CornerRadius" Value="38" />
        <Setter Property="Background" Value="{StaticResource FooterColorColor}" />
        <Setter Property="Padding" Value="20,4,20,4" />
    </Style>

</ResourceDictionary>