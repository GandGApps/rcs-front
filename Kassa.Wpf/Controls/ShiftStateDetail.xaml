<UserControl
    x:Class="Kassa.Wpf.Controls.ShiftStateDetail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Kassa.Wpf.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <TextBlock
        VerticalAlignment="Center"
        Foreground="{StaticResource AlternateForeground}"
        Style="{StaticResource SmallTextBlock}"
        TextAlignment="Right">
        <Run Text="Менеджер: " /><Run x:Name="ManagerName" Text="???" /><LineBreak />
        <Run Text="Кассир: " /><Run x:Name="CashierName" Text="???" /><LineBreak />
        <Run Text="Смена" /> <Run x:Name="ShiftNumber" Text="???" /><Run x:Name="ShiftState" Text=" открыта " /><Run x:Name="ShiftBegin" Text="???" />
    </TextBlock>
</UserControl>
